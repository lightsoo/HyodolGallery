<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="swmaestro.lightsoo.game.Intro.LoginActivity">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@mipmap/ic_launcher" />


    <EditText
        android:id="@+id/et_login_email"
        android:layout_width="295.33dp"
        android:layout_height="47.67dp"
        android:background="@drawable/intro_email"
        android:ems="10"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:paddingLeft="56dp"
        android:singleLine="true"
        android:textColor="@color/colorPrimartLight"
        android:textColorHint="@color/colorPrimartLight"
        android:textSize="13sp"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/btn_login_local"
        android:layout_marginTop="28dp" />

    <EditText
        android:id="@+id/et_login_passwd"
        android:layout_width="295.33dp"
        android:layout_height="47.67dp"
        android:background="@drawable/intro_passwd"
        android:hint="비밀번호"
        android:paddingLeft="56dp"
        android:password="true"
        android:singleLine="true"
        android:textColor="@color/colorPrimartLight"
        android:textColorHint="@color/colorPrimartLight"
        android:textSize="13sp"
        android:layout_below="@+id/et_login_email"
        android:layout_alignStart="@+id/et_login_email"
        android:layout_marginTop="8dp" />


    <Button
        android:gravity="center_horizontal"
        android:id="@+id/btn_login_local"
        android:layout_width="295.33dp"
        android:layout_height="47.67dp"
        android:background="@drawable/intro_login"
        android:layout_below="@+id/et_login_passwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <Button
        android:background="@drawable/facebook_login"
        android:layout_width="295.33dp"
        android:layout_height="47.67dp"
        android:id="@+id/btn_login_fb"
        android:layout_below="@+id/btn_signup"
        android:layout_alignStart="@+id/btn_signup"
        android:layout_marginTop="8dp" />

    <Button
        android:background="@drawable/btn_signup"
        android:layout_width="295.33dp"
        android:layout_height="47.67dp"
        android:id="@+id/btn_signup"
        android:layout_below="@+id/btn_login_local"
        android:layout_alignStart="@+id/btn_login_local"
        android:layout_marginTop="8dp" />



</RelativeLayout>
